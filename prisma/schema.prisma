// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       String  @id @default(uuid())
  username String  @unique
  password String
  name     String
  phone    String?
  role     role    @default(USER)
  active   Boolean @default(true)
}

enum role {
  USER
  ADMIN
}

model product {
  id         String               @id @default(uuid())
  name       String
  store      store                @relation(fields: [storeId], references: [id])
  storeId    String
  category   category?            @relation(fields: [categoryId], references: [id])
  categoryId String?
  orders     products_on_orders[]
  stock      Decimal              @default(0)
  items      item_sold[]
}

model store {
  id       String    @id @default(uuid())
  name     String    @unique
  products product[]
  orders   order[]
}

model category {
  id                 String               @id @default(uuid())
  name               String               @unique
  products           product[]
  active             Boolean              @default(true)
  products_on_orders products_on_orders[]
}

model client {
  id      String  @id @default(uuid())
  name    String
  rfc     String?
  phone   String?
  address String?
  orders  order[]
  debt    Decimal @default(0.0)
  status   status               @default(ON_TIME)
  lastStatusUpdate  DateTime  @default(now()) @db.Date

}

model order {
  id       String               @id @default(uuid())
  client   client               @relation(fields: [clientId], references: [id])
  clientId String
  products products_on_orders[]
  total    Decimal
  date     DateTime             @default(now()) @db.Date
  store    store?               @relation(fields: [storeId], references: [id])
  storeId  String?
}

model products_on_orders {
  product    product   @relation(fields: [productId], references: [id])
  productId  String
  order      order     @relation(fields: [orderId], references: [id])
  orderId    String
  category   category? @relation(fields: [categoryId], references: [id])
  categoryId String?
  date       DateTime  @default(now())
  quantity   Decimal
  price      Decimal   @default(0)

  @@id([productId, orderId])
}

enum status {
  ON_TIME
  DELAYED
  PAYED
}

model payments {
  id       String   @id @default(uuid())
  amount   Decimal
  date     DateTime @default(now()) @db.Date
  clientId String
}

model item_sold {
  id        String  @id @default(uuid())
  product   product @relation(fields: [productId], references: [id])
  productId String
  price     Decimal
}
